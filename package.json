{
  "name": "ugc-script-splitter",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm run build && pnpm run server",
    "dev:watch": "concurrently \"pnpm run server\" \"pnpm run watch:client\"",
    "server": "nodemon server.js",
    "watch:client": "nodemon --watch client/src --ext js,jsx,css --exec \"pnpm run build\"",
    "build": "cd client && pnpm run build && cd .. && rm -rf build && cp -r client/build .",
    "start": "node server.js",
    "install-all": "pnpm install && cd client && pnpm install",
    "heroku-postbuild": "cd client && pnpm install && pnpm run build",
    "format": "biome format --write . && pnpm run format:md",
    "format:check": "biome format . && pnpm run format:md:check",
    "format:md": "markdownlint-cli2 --fix \"*.md\" \"instructions/**/*.md\" \"!node_modules\" \"!client/node_modules\"",
    "format:md:check": "markdownlint-cli2 \"*.md\" \"instructions/**/*.md\" \"!node_modules\" \"!client/node_modules\"",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write . && pnpm run format:md",
    "check:ci": "biome ci . && pnpm run format:md:check",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@google-cloud/vertexai": "^1.9.0",
    "@google/genai": "^1.28.0",
    "@google/generative-ai": "^0.21.0",
    "archiver": "^6.0.1",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "openai": "^4.20.1",
    "pnpm": "^10.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "concurrently": "^8.2.2",
    "markdownlint-cli2": "^0.18.1",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "vitest": "^4.0.7"
  }
}
